<h1 class="pb-4">  <%= categoryArticlesById[0].category %> Articles </h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/categories"> Categories </a></li>
      <li class="breadcrumb-item active" aria-current="page"> <%= categoryArticlesById[0].category %> </li>
    </ol>
  </nav>

<div class="row row-cols-3 row-cols-lg-5 g-2 g-lg-3 py-4">

    <% if(categoryArticlesById != null) { %>
        <% categoryArticlesById.forEach((article, index) => { %>
            <a href="/articles/<%- article.id %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="/uploads/<%- article.image %>" alt="<%- article.name %>" loading="lazy">
                </div>
                <div class="pt-1"> <%- article.name %> </div>
            </a>
        <% }) %>
    <% } %>

</div>