<h1 class="pb-4">Explore Latest</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(latest != '') { %>
    <% latest.forEach(function(article, index){ %>
    <a href="/articles/<%= article._id %>" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="/uploads/<%= article.image %>" alt="<%= article.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= article.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %> 
</div>