<% if(article != null ) { %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb flex article-breadcrum">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/categories"> Categories </a></li>
            <li class="breadcrumb-item"><a href="/categories/<%- article.category %>"><%- article.category %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- article.name.substring(0,40) %>...</li>
        </ol>
    </nav>


    <div class="row">

        <div class="col-12 col-md-4">
            <img src="/uploads/<%- article.image %>" class="img-fluid sticky-top" style="top: 20px;"
                alt="<%- article.name %>" loading="lazy">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- article.name %></h1>
                </div>
                <% if (typeof article.createdAt !== 'undefined') { %>
                    <div class="col-12 mb-1 article-tag"> <i class="bi bi-calendar"></i> <%- article.updatedAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %> </div>
                <% } %>
                <div class="col-12 mb-4 article-tag"><i class="bi bi-tag"></i> <%- article.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <%- article.description %>
                </div>
            </div>

        </div>
    </div>
<% } else { %>
    <h1>Article not found.</h1>
<% } %>