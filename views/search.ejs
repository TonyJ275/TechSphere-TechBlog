<h1 class="pb-4">Search Results</h1>

<% if(searchArticles !='' ) { %>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
            <% searchArticles.forEach(function(article, index){ %>
                <a href="/articles/<%= article._id %>" class="col text-center category__link">
                    <div class="category__img category__img--large shadow">
                        <img src="/uploads/<%= article.image %>" alt="<%= article.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                        <%= article.name %>
                    </div>
                </a>
            <% }) %>
    </div>
<% } else { %>
    <h1>No Articles found.</h1>
    <% } %>