<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/images/tech-img.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy"
            alt="tech-image">
    </div>

    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3">Empower Yourself with Latest Tech Insights</h1>
        <p class="lead">
            Immerse yourself in the fascinating world of technology and stay ahead of the curve. From cutting-edge
            innovations to practical tips and insightful analysis, TechSphere is your ultimate destination for all
            tech topics.
        </p>


        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
            <a href="/add-article" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Add an Article</a>
        </div>

    </div>

</div>

<!-- Categories Start -->


<div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3 py-4">

    <% if(categories != '') { %>
        <% categories.forEach((category, index) => { %>
            <a href="/categories/<%- category.name %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="<%- category.image %>" alt="<%- category.name %>" loading="lazy">
                </div>
                <div class="pt-1"> <%- category.name %> </div>
            </a>
        <% }) %>
    <% } %>

    
    <a href="/categories" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="images/view-all.jpg" alt="View All Categories" loading="lazy">
        </div>
        <div class="pt-1">View All Categories</div>
    </a>

</div>

<!-- Categories End -->

<!-- Latest Start -->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Articles</h2>
        <a href="/explore-latest" class="ms-auto">View All</a>
    </div>

    <div class="row row-cols-3 row-cols-lg-5 g-2 g-lg-3">

        <% if(latest != '') { %>
            <% latest.forEach((article, index) => { %>
                <a href="/articles/<%= article.id %>" class="col text-center category__link">
                    <div class="category__img category__img--large shadow">
                        <img src="uploads/<%= article.image %>" alt="<%= article.name %>" loading="lazy">
                    </div>
                    <div class="pt-1 mb-1">
                        <%= article.name.substring(0,40) %>...
                    </div>
                </a>
            <% }) %>
        <% } %>


    </div>

</section>
<!-- Latest End -->

<!-- Articles Start -->

<% categoryWiseArticles.forEach((element) => { %>
    <% if (element.length !== 0) { %>
        <section class="pb-4 pt-4">
            <div class="d-flex mb-2 align-items-center">
                <h2><%= element[0].category %></h2> 
                <a href="/categories/<%- element[0].category %>" class="ms-auto">View More</a>
            </div>
        
            <div class="row row-cols-3 row-cols-lg-5 g-2 g-lg-3">
        
                <% element.forEach((article, index) => { %>
                    <a href="/articles/<%= article.id %>" class="col text-center category__link">
                        <div class="category__img category__img--large shadow">
                            <img src="uploads/<%= article.image %>" alt="<%= article.name %>" loading="lazy">
                        </div>
                        <div class="pt-1">
                            <%= article.name.substring(0,40) %>...
                        </div>
                    </a>
                <% }) %>
        
        
            </div>
        
        </section>
    
    <% } %>
<% }) %>

<!-- Articles End -->



<!-- Submit - Start -->

<section class="px-4 py-5 mt-5 mb-3 text-center">
    <img src="/images/publish-article.png" class="d-block mx-auto mb-4 img-fluid" alt="Publish your recipe for FREE today"
        width="566" height="208" loading="lazy">
    <h1 class="display-6 fw-bold">Publish your Article Today</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Share Latest Tech with the world</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/add-article" class="btn btn-primary btn-dark btn-md">Submit Article</a>
        </div>
    </div>
</section>

<!-- Submit - End -->